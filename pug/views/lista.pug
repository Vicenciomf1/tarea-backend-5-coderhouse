doctype html
html(lang='es')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
        meta(http-equiv='X-UA-Compatible', content='ie=edge')
        title Tarea con ejs
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi', crossorigin='anonymous')
    body
        header.container
            .row
                .col-12
                    h1.text-center Bienvenid@ a la tarea con ejs
        main.container
            section.row
                .col-12
                    h2.text-center Lista de productos
                .col.align-self-center
                    a(href='/') Ir a formulario
                    if productos.length > 0
                        table.table
                            thead
                                tr
                                    th(scope='col') TÃ­tulo
                                    th(scope='col') Precio
                                    th(scope='col') Thumbnail
                            tbody
                                each producto in productos
                                    tr
                                        td=producto.title
                                        td=producto.price
                                        td
                                            img(src=producto.thumbnail, alt=producto.title, style='width: 20%')
                    else
                        h3.text-center No hay productos
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3', crossorigin='anonymous')