<section class="row">
    <div class="col-12">
        <h2 class="text-center">Lista de productos</h2>
    </div>
    <div class="col align-self-center">
        {{#if productos.[0]}}
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Foto</th>
                    </tr>
                </thead>
                <tbody>
                {{#each productos}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{price}}</td>
                        <td><img style="width: 20%" src={{thumbnail}} alt="{{title}}"></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        {{else}}
            <div class="col-12">
                <h3 class="text-center">No hay productos</h3>
            </div>
        {{/if}}
    </div>
</section>