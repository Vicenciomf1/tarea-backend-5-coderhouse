<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Tarea con ejs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body>
<header class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">Bienvenid@ a la tarea con ejs</h1>
        </div>
    </div>
</header>
<main class="container">
    <section class="row">
        <div class="col-12">
            <h2 class="text-center">Lista de productos</h2>
        </div>
        <div class="col align-self-center">
            <a href="/">Ir a formulario</a>
            <% if (productos[0]) { %>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Foto</th>
                </tr>
                </thead>
                <tbody>
                <% productos.forEach(function({title, price, thumbnail}){ %>
                <tr>
                    <td><%=title%></td>
                    <td><%=price%></td>
                    <td><img style="width: 20%" src="<%=thumbnail%>" alt="<%title%>"></td>
                </tr>
                <% }) %>
                </tbody>
            </table>
            <% } else { %>
            <div class="col-12">
                <h3 class="text-center">No hay productos</h3>
            </div>
            <% } %>
        </div>
    </section>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>